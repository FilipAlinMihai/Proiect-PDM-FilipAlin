<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ModificaMasina"
    android:background="@drawable/fundal3">

    <TextView
        android:id="@+id/ModificareTitlu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#081978"
        android:text="Modificare"
        android:textColor="#F2E8E0"
        android:textSize="35dp"
        android:layout_gravity="center"
        app:fontFamily="casual"
        />

    <EditText
        android:id="@+id/NumeMasinaEdit"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/ModificareTitlu"
        android:background="@drawable/buton"
        android:backgroundTint="#60ffffff"
        android:drawablePadding="20dp"
        android:drawableLeft="@drawable/ic_baseline_directions_car_24"
        android:hint="Nume Masina"
        android:singleLine="true"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="25dp"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/NumarNou"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/NumeMasinaEdit"
        android:background="@drawable/buton"
        android:backgroundTint="#60ffffff"
        android:drawablePadding="20dp"
        android:hint="Numar Nou"
        android:drawableLeft="@drawable/ic_baseline_add_circle_outline_24"
        android:singleLine="true"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="25dp"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/Modifica"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/NumarNou"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/buton"
        android:text="Modifica"
        android:textColor="#F2E8E0"
        android:textSize="25sp"
        app:backgroundTint="#081978"
        app:fontFamily="casual" />

</RelativeLayout>